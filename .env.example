# Amazon Product Analysis System - Environment Configuration Template
# Copy this file to .env and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/amazon_analyzer

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0

# Application Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Scraper Configuration
SCRAPER_HEADLESS=true
SCRAPER_TIMEOUT=30000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30

# Docker Environment Variables (for docker-compose)
# These will override the above when running in Docker
# DATABASE_URL=postgresql://postgres:password@db:5432/amazon_analyzer
# REDIS_URL=redis://redis:6379/0